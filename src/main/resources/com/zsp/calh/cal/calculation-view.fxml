<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_LEFT" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.zsp.calh.cal.controller.CalculationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="温度数据计算" />
    
    <!-- 计算条件区域 -->
    <GridPane hgap="10" vgap="10">
        <Label text="选择线别:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="lineComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>
        
        <Label text="选择设备:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="deviceComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>
    </GridPane>
    
    <!-- 按钮区域 -->
    <HBox alignment="CENTER" spacing="10">
        <Button text="计算" onAction="#performCalculation" prefWidth="100"/>
        <Button text="返回查询页" onAction="#returnToQueryView" prefWidth="120"/>
    </HBox>
    
    <!-- 计算结果区域 -->
    <VBox spacing="5">
        <Label text="计算结果:"/>
        <TextArea fx:id="resultTextArea" editable="false" prefHeight="200" wrapText="true"/>
    </VBox>
</VBox>